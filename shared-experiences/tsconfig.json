{
  "files": [],

  "references": [
    { "path": "./tsconfig.node.json" }
  ],

  "compilerOptions": {
    "baseUrl": ".",

    "paths": {
      "@/*": ["src/*"]
    },

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "types": ["vite/client"],

    "jsx": "react-jsx",
    "module": "ESNext"
  },

  "include": ["src", "api"]
}
