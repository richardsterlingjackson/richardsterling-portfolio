{
  // Main TS config for the whole project.
  // This ties together the app + node configs and sets shared rules.

  "files": [],

  // Vite splits config into "app" and "node" builds.
  // These references let both inherit the root settings.
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],

  "compilerOptions": {
    // Lets us import from the project root (e.g. "@/lib/db").
    "baseUrl": ".",

    // Matches the Vite alias.
    "paths": {
      "@/*": ["src/*"]
    },

    // General strictness + cleanup.
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Build behavior.
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "ESNext",
    "target": "ESNext",

    // React JSX transform.
    "jsx": "react-jsx",

    // Vite global types.
    "types": ["vite/client"]
  },

  // Important: TS needs to see both the frontend code AND the API folder.
  "include": ["src", "api"]
}
