{
  "crons": [
    {
      "path": "/api/cron/publish",
      "schedule": "0 8 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/posts/:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*([Ff]acebookexternalhit|[Ff]acebot|[Ff]acebook|[Tt]witterbot|[Ll]inkedinbot|[Ss]lackbot|[Dd]iscordbot|[Ww]hatsapp|[Tt]elegrambot|[Pp]interest|[Gg]ooglebot).*"
        }
      ],
      "destination": "/api/prerender?slug=:slug"
    },
    {
      "source": "/posts/:slug/",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*([Ff]acebookexternalhit|[Ff]acebot|[Ff]acebook|[Tt]witterbot|[Ll]inkedinbot|[Ss]lackbot|[Dd]iscordbot|[Ww]hatsapp|[Tt]elegrambot|[Pp]interest|[Gg]ooglebot).*"
        }
      ],
      "destination": "/api/prerender?slug=:slug"
    },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
