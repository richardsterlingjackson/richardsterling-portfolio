{
  "compilerOptions": {
    "composite": true,
    "noEmit": true,

    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "lib": ["DOM", "ESNext"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": ["src"]
}
